@model IEnumerable<Tiss.Web.Models.ProductViewModel>

@{
    ViewBag.Title = "Search";
}

<div class="row" style="margin-top: 15px">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
            </tr>
        </thead>

        <tbody>
            <tr id="base_row">
                <td colspan="3" align="center">
                    Нет данных. Пожалуйста, нажмите кнопку "Поиск".
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-4">
        <input id="search" type="button" class="btn btn-secondary btn-block" value="Поиск" />
    </div>
</div>
